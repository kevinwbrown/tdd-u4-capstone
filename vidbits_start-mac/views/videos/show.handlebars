<div class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{video.title}}</h1>
    </div>

    <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>

    <div class="video-description">
      <p>{{video.description}}</p>
    </div>

    <div class="video-url">
      <p>{{video.url}}</p>
    </div>

    <form class="input-form" action="/videos/{{video._id}}/edit" method="get">
      <button class="button input-button" id="edit-button" type="submit">
        <p>Edit video</p>
      </button>
    </form>

    <form class="input-form" action="/videos/{{video._id}}/deletions" method="post">
      <button class="button input-button" id="delete-button" type="submit">
        <p>Delete video</p>
      </button>
    </form>
  </div>
</div>
